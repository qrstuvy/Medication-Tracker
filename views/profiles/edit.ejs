<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<h3>Update Profile</h3>
<form action="/profiles/<%= profile._id %>/?_method=PUT" method="POST" autocomplete="off">
<label>Patient Information:</label><br><br>
<label>Profile Image URL (optional):</label>
<input type="string" name="name" value="<%= profile.image %>">
<br>
<label>Name:</label>
<input type="string" name="name" required value="<%= profile.name %>">
<br>

<label>Date of Birth:</label>
<input type="date" name="dateOfBirth" required value="<%= profile.dateOfBirth.toISOString().slice(0, 10) %>"> 
<br><br>
<label>Relationship:</label>
<input type="string" name="relationship" value="<%= profile.relationship %>"><br>
<label>Insurance Information:</label><br><br>
<label>Insurance name:</label>
<input type="string" name="insName" value="<%= profile.insName %>"><br>
<label>Member ID:</label>
<input type="string" name="memberId" value="<%= profile.memberId %>"><br>
<label>Group:</label>
<input type="string" name="group" value="<%= profile.group %>"><br>
<label>BIN Number:</label>
<input type="string" name="binNo" value="<%= profile.binNo %>"><br>
<label>PCN:</label>
<input type="string" name="pcn" value="<%= profile.pcn %>"><br>
<br>
<input type="submit" value="Update Profile">
</form>
<br>
<a href="/profiles" class="btn btn-outline-primary"> Back</a>
<%- include('../partials/footer') %>